			<!-- Single Catagory -->
		<%
			for(int i=0; i < 9; i++) {
				
			
		%>
			<div class="single-products-catagory clearfix">
				<a href="shop.html"> <img src="${pageContext.request.contextPath}/img/<%=stored_file_name[i]%>"> <!-- Hover Content -->
					<div class="hover-content">
						<div class="line"></div>
						<!-- &#8361; 원 특수문자 표시 -->
						<p>
							&#8361;
							<%=product_price[i]%></p>
						<h4><%=product_name[i]%></h4>
					</div>
				</a>
			</div>
		<%
			}
		%>
			
