    <select id="loginYn" resultType="com.project.greenbook.dto.MemDTO">
        SELECT mem_pwd FROM member
    </select>

    <select id="list" resultType="com.project.greenbook.dto.MemDTO">
        SELECT mem_pwd FROM member
    </select>

    <!-- parameterType에 hashmap이라고 지정한다. 이후에 변수에는 #{param1}과 같은 형식이 아닌 변수 명을 적는다. -->
    <insert id="register" parameterType="hashmap">
        INSERT INTO `member` (mem_id, mem_pwd, mem_name, mem_phone1, mem_phone2, mem_phone3, mem_email, mem_postcode, mem_address, mem_extraAddress, mem_detailAddress) VALUES (#{mem_id}, #{mem_pwd}, #{mem_name}, #{mem_phone1}, #{mem_phone2}, #{mem_phone3}, #{mem_email}, #{mem_postcode}, #{mem_address}, #{mem_extraAddress}, #{mem_detailAddress});
    </insert>



</mapper>
